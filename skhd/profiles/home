#iTerm
ctrl - t : "${HOME}"/.config/scripts/open_iterm2.sh
ctrl + shift - t: "${HOME}"/.config/scripts/open_iterm2.sh

#move focus
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - l : yabai -m window --focus east

#insert window
ctrl + shift - h : yabai -m window --warp west
ctrl + shift - j : yabai -m window --warp south
ctrl + shift - k : yabai -m window --warp north
ctrl + shift - l : yabai -m window --warp east

#swap window 
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - l : yabai -m window --swap east

#window size: u/i = bigger/smaller; shift = toggle vertical
ctrl - u : yabai -m window --resize left:-20:0; yabai -m window --resize right:20:0
ctrl + shift - u : yabai -m window --resize top:0:-20; yabai -m window --resize bottom:0:20
ctrl - i : yabai -m window --resize left:20:0; yabai -m window --resize right:-20:0
ctrl + shift - i : yabai -m window --resize top:0:20; yabai -m window --resize bottom:0:-20

#spaces
ctrl - 1 : yabai -m space --focus first 
ctrl - 2 : yabai -m space --focus second
ctrl - 3 : yabai -m space --focus third
ctrl - 4 : yabai -m space --focus fourth
ctrl - 5 : yabai -m space --focus fifth
ctrl - 6 : yabai -m space --focus sixth
ctrl - 7 : yabai -m space --focus seventh
ctrl - 8 : yabai -m space --focus eighth
ctrl - 9 : yabai -m space --focus ninth

#send windows
ctrl + shift - 1 : yabai -m window --space first
ctrl + shift - 2 : yabai -m window --space second
ctrl + shift - 3 : yabai -m window --space third
ctrl + shift - 4 : yabai -m window --space fourth
ctrl + shift - 5 : yabai -m window --space fifth
ctrl + shift - 6 : yabai -m window --space sixth
ctrl + shift - 7 : yabai -m window --space seventh
ctrl + shift - 8 : yabai -m window --space eighth
ctrl + shift - 9 : yabai -m window --space ninth

#space management
ctrl + shift + alt - 1 : yabai -m window --display 1
ctrl + shift + alt - 2 : yabai -m window --display 2

ctrl + shift + cmd - 1 : yabai -m display --focus 1
ctrl + shift + cmd - 2 : yabai -m display --focus 2

cmd + ctrl - 1 : yabai -m space --display 1
cmd + ctrl - 2 : yabai -m space --display 2

#flip layout
ctrl - 0 : yabai -m space --mirror y-axis 
ctrl + shift - 0 : yabai -m space --mirror x-axis 

#layout toggle
ctrl + shift + alt - 0 : "${HOME}"/.config/skhd/scripts/layout_toggle.sh  
ctrl + shift + cmd - 0 : "${HOME}"/.config/skhd/scripts/opacity_toggle.sh  
ctrl - f : yabai -m window --toggle float

#ctrl track controls
ctrl + shift - b : spotify prev
ctrl + shift - n : spotify next
ctrl + shift - m : spotify pause

#spotify volume
ctrl + shift - 0x2B : spotify vol down
ctrl + shift - 0x2F : spotify vol up

#mktex
ctrl + cmd - n: "${HOME}"/.config/scripts/mktex_autoname.py


#quick reload
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

